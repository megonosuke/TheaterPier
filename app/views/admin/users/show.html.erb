<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "admin/side_bar" %>
    </div>
    <div class="col-8">
      <h2 class="mt-4 mb-4">
        <%= @user.name  %>さんの詳細
      </h2>

      <table class="table table-borderless">
        <tr class="mb-4">
          <td>ユーザーID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <% if @status.is_delete %>
            <td class="text-secondary">退会</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
        </tr>

        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>