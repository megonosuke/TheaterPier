<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "admin/side_bar" %>
    </div>
    <div class="col-8">
      <h2 class="mb-4">ユーザー一覧</h2>
      
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <u><%= user.name %></u>
                <% end %>
              </td>
              
              <td><%= user.email %></td>
              
              <% status = User.select("is_delete").find_by(id: user.id) %>
              <% if status.is_delete %>
                <td class="text-secondary">退会</td>
              <% else %>
                <td class="text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
        
      </table>
      
      
      
    </div>
  </div>
</div>