<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "user/side_bar" %>
    </div>
    <div class="col-8">
      投稿詳細
      <h4>Title:</h4>
      <p><%= @post.title %></p>

      <h4>Content:</h4>
      <p><%= @post.content %></p>



      <%= link_to "編集", edit_post_path(@post) %> |
      <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %> |
      <%= link_to "戻る", posts_path %>

      <div>
        <% if user_signed_in? %>
          <% if @post.liked_by?(current_user) %>
            <%= link_to '❤️', unlike_post_path(@post), method: :delete, remote: true %>
          <% else %>
            <%= link_to '♡', like_post_path(@post), method: :post, remote: true %>
          <% end %>
        <% end %>
      </div>

      <div>
        <h2>コメント</h2>
        <%= form_with(model: [@post, Comment.new], local: true) do |form| %>
          <%= form.text_area :content, placeholder: 'コメントを入力してください' %>
          <%= form.submit 'コメントする' %>
        <% end %>

        
        <% @post.comments.each do |comment| %>
          <p><strong><%= comment.user.name %>:</strong> <%= comment.content %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>