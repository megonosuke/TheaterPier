<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render "user/side_bar" %>
    </div>
    <div class="col-8">
      <h1>新規投稿作成</h1>
      <%= form_with model: @post, url: posts_path do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Content</h4>
        <%= f.text_area :content %><br>

        <%= f.label :tag_names %>
        <%= f.text_field :tag_names, placeholder: 'タグをカンマ区切りで入力してください' %>


        <div>
         <%= f.label :is_published_flag, "公開", value: true %>
         <%= f.radio_button :is_published_flag, 'true' %>
        </div>
        <div>
          <%= f.label :is_published_flag, "非公開", value: false %>
          <%= f.radio_button :is_published_flag,'false' %>
        </div>


        <%= f.submit '投稿する' %>

      <% end %>
    </div>
  </div>
</div>