<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render "user/side_bar" %>
    </div>
    <div class="col-8">
      <h1>New post</h1>
      <%= form_with model: @post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Content</h4>
        <%= f.text_area :content %><br>

        <%= f.submit 'Create Post' %>

      <% end %>
    </div>
  </div>
</div>